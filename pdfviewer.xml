<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content" method="upgrade">
	<name>pdfviewer</name>
	<author>Tazzios</author>
	<creationDate>april 2021</creationDate>
	<copyright></copyright>
	<license></license>
	<authorEmail></authorEmail>
	<authorUrl>https://github.com/Tazzios</authorUrl>
	<version>0.9.0</version>
	<description>content plugin for PDF</description>
	<files>
		<filename plugin="pdfviewer">pdfviewer.php</filename>
		<filename>index.html</filename>
		<filename>pdfviewer.xml</filename>
		<folder>assets</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="style" type="list"
					default="Embed"
					label="Default viewer style"
				>
				<option value="Embed">Embedded</option>
				<option value="Popup">Modal Popup</option>
				<option value="New">Open in new window</option>		
			</field>
			<field 
				name="linktext" 
				type="text" default="Download" 
				label="Default linktext for Popup and open in new window link" 
				description=""
			/>
			<field type="spacer" name="myspacer1" label="Size for embed" />
			<field 
				name="embedwidth" 
				type="text" default="100%" 
				label="Embed width pdfviewer" 
				description=""
			/>
			<field 
				name="embedheight" 
				type="text" default="800" 
				label="Embed height pdfviewer" 
				description=""
			/>
			<field type="spacer" name="myspacer" label="Size for popup" />
			<field 
				name="popupwidth" 
				type="text" default="800" 
				label="Popup width pdfviewer" 
				description=""
			/>
			<field 
				name="popupheight" 
				type="text" default="800" 
				label="Popup height pdfviewer" 
				description=""
			/>
			<field 
			 	name="debug" type="radio"
				default="0"
				label="Turn on DEBUG output to help find errors"
				>
					<option value="0">OFF</option>
					<option value="1">ON</option>
			</field>
			</fieldset>

			
		</fields>
	</config>
	    <updateservers>
      <server type="extension" priority="2" name="pdfviewer">https://raw.githubusercontent.com/tazzios/pdfviewer/master/updates.xml</server>
    </updateservers>
</extension>
