<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content" method="upgrade">
	<name>pdfviewer</name>
	<author>Tazzios</author>
	<creationDate>april 2021</creationDate>
	<copyright>Copyright (C) 2005 - 2020 Open Source Matters. All rights reserved.</copyright>
	<license> LICENSE.txt</license>
	<authorEmail>mail</authorEmail>
	<authorUrl>https://github.com/Tazzios</authorUrl>
	<version>0.7.0</version>
	<description>content plugin for PDF</description>
	<files>
		<filename plugin="pdfviewer">pdfviewer.php</filename>
		<filename>index.html</filename>
		<filename>pdfviewer.xml</filename>
		<folder>assets</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="style" type="list"
					default="Embed"
					label="Preview style"
				>
				<option value="Embed">Embedded</option>
				<option value="Popup">Modal Popup</option>
				<option value="New">Open in new window</option>		
			</field>
			<field 
				name="linktext" 
				type="text" default="Download" 
				label="Default linktext for Popup and open in new window link" 
				description=""
			/>
			<field 
				name="width" 
				type="text" default="100%" 
				label="width pdfviewer" 
				description=""
			/>
			<field 
				name="height" 
				type="text" default="800" 
				label="height pdfviewer" 
				description=""
			/>
			</fieldset>
		</fields>
	</config>
	    <updateservers>
      <server type="extension" priority="2" name="pdfviewer">https://www.famrodenburg.net/test/updates.xml</server>
    </updateservers>
</extension>
